@{
    ViewBag.Title = "TheLoaiPartial";
    Layout = "~/Views/Shared/PageLayOutAdmin.cshtml";
}

@using WebSiteBanSach.Models;
@model List<THELOAI>

<center style="width:100%"><h2>DANH MỤC THỂ LOẠI</h2>
<div class="card border-dark">
    <table class="table" style="text-align: center;">
        <tr style="background-color: lightyellow">
            <th width="5%">MÃ THỂ LOẠI</th>
            <th width="12%">TÊN THỂ LOẠI</th>

            <th width="10%" colspan="2"><a class="btn btn-primary" href="@Url.Action("ThemTheLoai","Admin")" >THÊM THỂ LOẠI</a></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @using (Html.BeginForm("CapNhatTheLoai", "Admin", new { @MASP = item.MATHELOAI }))
                {
                    <td width="5%">@item.MATHELOAI</td>
                    <td width="20%">
                        <input id ="txtTenTheLoai" type="text" name="txtTenTheLoai" value="@item.TENTHELOAI" style="width:100%"/></td>
              
                    <td><a class="btn btn-primary" href="@Url.Action("XoaTheLoai", "Admin", new { @MASP = item.MATHELOAI })" style="color:white;">XOÁ</a></td>
                    <td>
                        <input id="Submit1" type="submit" value="CẬP NHẬT" class="btn btn-primary" /></td>
                }
            </tr> 
        }
        <tr style="background-color: lightyellow">
        </tr>
    </table>
</div></center>
