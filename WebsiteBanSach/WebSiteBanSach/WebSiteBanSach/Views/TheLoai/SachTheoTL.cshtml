<style>
    .content {
    }
    .image {

    }
    .text {
        bottom:0px;
        text-align:center;
        position:absolute;
        color:red;
        text-decoration:none;
        opacity:0;
        width:200px;
        height:250px;
    }
        .content:hover .image{
            opacity:0.1;
