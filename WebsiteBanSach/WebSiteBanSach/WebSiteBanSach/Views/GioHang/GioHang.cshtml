@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/PageLayout.cshtml";
}

@using WebSiteBanSach.Models;
@model List<GioHang>

<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="card border-dark">
    <table class="table" style="text-align:center">
        <tr style="background-color:lightyellow">
            <th width="10%">MÃ SÁCH</th>
            <th width="12%">TÊN SÁCH</th>
            <th width="12%">ẢNH BÌA</th>
            <th width="12%">SỐ LƯỢNG</th>
            <th width="12%">ĐƠN GIÁ</th>
            <th width="12%">THÀNH TIỀN</th>
            <th width="12%"><a href="@Url.Action("XoaGioHang_All", "GioHang")" style="color:black">XOÁ HẾT</a></th>
            <th width="10%" style="background-color:red">@Html.ActionLink("ĐẶT HÀNG","DatHang", "GioHang")</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iMaSach</td>
                <td width="26%">@item.sTenSach</td>
                <td width="19%"><img src="~/Images/sanpham/@item.sAnhBia" style="width:200px;height:180px" /></td>
              
                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @MASP = item.iMaSach }))
                    {
                        <td><input id ="txtSoLuong" type="number" name="txtSoLuong" value="@item.iSoLuong" style="width:40px"/></td>
               
                
                <td width="12%">@String.Format("{0:0,0}", item.dDonGia)</td>
                <td width="16%">@String.Format("{0:0,0}", item.dThanhTien)</td>
                <td><a href="@Url.Action("XoaGioHang", "GioHang", new {@MASP = item.iMaSach})" style="color:black; font-weight:bold">XOÁ</a></td>
                        <td><input id="Submit1" type="submit" value="CẬP NHẬT" class="btn btn-primary" /></td>
                    }
            </tr> 
        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue; font-weight:bold; text-align:right">TỔNG CỘNG: </td>
            <td style="color:red; font-weight:bold;">@ViewBag.tongSoLuong</td>
            <td></td>
            <td style="color:red; font-weight:bold;">@String.Format("{0:0,0}", ViewBag.TongThanhTien) VNĐ</td>
            <td>

            </td>
            <td></td>
        </tr>
    </table>
</div>