    <style>
        a {
            text-decoration: none;
            color: white;
        }

        li {
            padding-left: 5px;
            display: inline;
        }
    </style>
</head>
<body style="background-color: #ccebff; color: #000d33; padding: 1% 5% 1% 5%; text-decoration: none">
    <audio controls autoplay preload="auto">
        <source src="~/aaa.mp3" type="audio/mp3" />
    </audio>
    <div class="container-md">
        @*Logo,Header*@
        <div id="header" class="row" style="background-color: white">
            <div id="banner">
                <div class="row">
                    <div class="col-md-8">
                        <img src="~/Content/hinhanh/logo.jpg" />
                    </div>
                    <div class="col-md-4" style="left: 12rem">
                        <div class="dropdown dropleft" style="float: right; padding-top: 5px">
                            <button class="btn dropdown-toggle" style="background-color: white" type="button" data-toggle="dropdown">
                                <img src="~/Content/hinhanh/user.jpg" />
                                <span class="caret"></span>
                            </button>
                            @if (Session["taikhoan"] != null)
                            {
                                <ul class="dropdown-menu" style="min-width: 8rem">
                                    <li>
                                        <img src="~/Content/hinhanh/login.png" />
                                        <a href="/NguoiDung/DangXuat" style="color: black">&ensp;Đăng xuất</a>
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <ul class="dropdown-menu" style="min-width: 8rem">
                                    <li>
                                        <img src="~/Content/hinhanh/login.png" />
                                        <a href="/NguoiDung/DangNhap" style="color: black">&ensp;Đăng nhập</a>
                                    </li>
                                    <li>
                                        <img src="~/Content/hinhanh/register.png" />
                                        <a href="/NguoiDung/DangKy" style="color: black">&ensp;Đăng ký</a>
                                    </li>
                                </ul>
                            }
                        </div>
                        <div style="clear: both; float: right; padding: 30px 10px 5px 0">
                            <button type="button" class="btn" style="width: 50px; height: 50px; background-image: url(../Content/hinhanh/facebook.png)"></button>
                            &ensp;
                            <button type="button" class="btn" style="width: 50px; height: 50px; background-image: url(../Content/hinhanh/instagram.png)"></button>
                            &ensp;
                            <button type="button" class="btn" style="width: 50px; height: 50px; background-image: url(../Content/hinhanh/twitter.png)"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*Menu*@
        <div id="menu" class="row" style="background-color: #3c3c2a;">
            <div class="col-8">
                <nav class="navbar navbar-expand-sm">
                    <!-- Links -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav" style="float: left; width: 80%">
                            <li class="nav-item nav-link">

                                @Html.ActionLink("TRANG CHỦ", "SachPartial", "Sach")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.ActionLink("GIỚI THIỆU", "GioiThieu", "Home")
                            </li>
                            @*<li class="nav-item nav-link">
                                @Html.ActionLink("TÁC GIẢ", "TacGiaPartial", "TacGia")
                            </li>*@
                            @*<li class="nav-item nav-link">
                                @Html.ActionLink("SÁCH", "SachPartial", "Sach")
                            </li>*@
                            <li class="nav-item nav-link">
                                @Html.ActionLink("CHÍNH SÁCH ƯU ĐÃI", "ChinhSach", "Home")
                            </li>
                            <li class="nav-item nav-link">
                                @Html.Action("GioHangPartial", "GioHang")
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-4" style="border-radius: 5px; margin-top: 0.5rem">
                @using (Html.BeginForm())
                {
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Search" name="timkiem">
                        <div class="input-group-append">
                            <button class="btn" type="submit" style="background-color: #ccebff;">Go</button>
                        </div>
                    </div>
                }
            </div>
        </div>
        @* Nội Dung*@
        <div id="content" class="row" style="padding-top: 1%">
            <div class="col-3" style="padding: 0">
                @* Danh mục*@
                @Html.Action("TheLoaiPartial", "TheLoai")
                @Html.Action("TacGiaPartial", "TacGia")
            </div>
            <div id="noidung" class="col-md-9" style="background-color: #ccebff; padding-right: 0">
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                         <li data-target="#demo" data-slide-to="3"></li>
                         <li data-target="#demo" data-slide-to="4"></li>
                         <li data-target="#demo" data-slide-to="5"></li>
                         <li data-target="#demo" data-slide-to="6"></li>
                    </ul>
                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        @Html.Action("Banner", "Home")
                    </div>
                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>

                <div>
                    @RenderBody()
                </div>
            </div>

        </div>
        @*Hiển thị Nhà xuất bản*@
        <div id="nhaxuatban" class="row" style="padding-top: 1%">
            <marquee width="100%" direction="right" behavior = "scroll"">
            @Html.Action("NhaXuatBanPartial", "NhaXuatBan")
        </marquee>
        </div>
        
        
        @*Footer*@
        <div id="footer" style="text-align: center; background-color: white; border-top: 1px inset #000d33; margin-left: -1.3%; margin-right: -1.3% ; clear:both" >
            <div class="row">
                <div class="col-3">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.0574538576975!2d106.62641241474921!3d10.806911692300842!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be27d8b4f4d%3A0x9f7b3cc581e940f5!2zMTQwIEzDqiBUcuG7jW5nIFThuqVuLCBUw6J5IFRo4bqhbmgsIFTDom4gUGjDuiwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1609212811100!5m2!1svi!2s" width="100%" height="250" frameborder="0" style="border: 0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            
                </div>
                <div class="col-9">
                    <div class="row" style="padding: 1%">
                        
                        <div class="col-md" style="display:none">
                            <img src="~/Images/aaa.png"  />&ensp;DỊCH VỤ TẬN TÂM
                        </div>
                        <div class="col-md">
                            <img src="~/Images/aaa.png"  />&ensp;TẬN TÂM
                        </div>
                        <div class="col-md">
                            <img src="~/Content/hinhanh/sachdadang.png" />&ensp;ĐA DẠNG
                        </div>
                        <div class="col-md">
                            <img src="~/Content/hinhanh/vanchuyenchudao.png" />&ensp;VẬN CHUYỂN

                        </div>
                        <div class="col-md">
                            <img src="~/Content/hinhanh/giacahoply.png" />&ensp;GIÁ TỐT
                        </div>
                    </div>
                    <div style="border-top: 1px solid whitesmoke; padding: 10px;">
                        <span style="color: black"><b>Công ty TNHH 2hPM Books</b> </span><br />
                        <span style="color: black"><b>Hotline:</b> 0123321123- <b>Email:</b> 2hpmbooks@gmail.com</span>
                        <br />
                        <span style="color: black"><b>Địa chỉ:</b> 140 Lê Trọng Tấn, phường Tây Thạnh, quận Tân Phú
                        </span>
                    </div>
                </div>
                
            </div>

        </div>
    </div>
